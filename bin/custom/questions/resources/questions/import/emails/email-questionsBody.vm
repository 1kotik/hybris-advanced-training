#if($ctx.questionsEmailDataMap && !$ctx.questionsEmailDataMap.isEmpty())
<table width="100%" border="0" cellpadding="0" cellspacing="0">
    #foreach($entry in $ctx.questionsEmailDataMap.entrySet())

        <tr>
            <td style="padding: 10px; background-color: #f2f2f2;">
                <strong>Product ID: $entry.key</strong>
                #set($firstQuestion = $entry.value.get(0))
                <span>($firstQuestion.productName)</span>
            </td>
        </tr>

        <tr>
            <td>
                <ul style="list-style-type: none; padding-left: 20px;">
                    #foreach($questionData in $entry.value)
                        <li style="margin-bottom: 15px; border-bottom: 1px dashed #ccc;">
                            <p><strong>Question:</strong> $questionData.question</p>
                            <p><strong>Answer:</strong> $questionData.answer</p>
                            <small style="color: #999;">Question ID: $questionData.questionId</small>
                        </li>
                    #end
                </ul>
            </td>
        </tr>
    #end
</table>
#else
<p>No new questions</p>
#end