<?xml version="1.0" encoding="UTF-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" name="questionEmailingProcess"
         start="generateQuestionsEmail"
         processClass="by.kotik.questions.model.QuestionsEmailingProcessModel" onError="error">
    <action id="generateQuestionsEmail" bean="generateQuestionsEmail">
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>
    <action id="sendEmail" bean="sendEmail">
        <transition name="OK" to="checkEmailMessageStatusAndMarkQuestionsAsSent"/>
        <transition name="NOK" to="failed"/>
    </action>
    <action id="checkEmailMessageStatusAndMarkQuestionsAsSent"
            bean="checkEmailMessageStatusAndMarkQuestionsAsSentAction">
        <transition name="OK" to="removeSentEmail"/>
        <transition name="NOK" to="error"/>
    </action>
    <action id="removeSentEmail" bean="removeSentEmail">
        <transition name="OK" to="success"/>
        <transition name="NOK" to="error"/>
    </action>
    <end id="error" state="ERROR"/>
    <end id="failed" state="FAILED"/>
    <end id="success" state="SUCCEEDED"/>
</process>