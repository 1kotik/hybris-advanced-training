<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>
	<context:component-scan base-package="by.kotik.questions"/>

	<bean id="questionsCoreDataImportedEventListener" parent="abstractCoreDataImportedEventListener">
		<property name="supportedChannels">
			<list value-type="de.hybris.platform.commerceservices.enums.SiteChannel">
				<value>B2C</value>
				<!--
								<value>B2B</value>
				-->
			</list>
		</property>
		<property name="addonExtensionMetadata">
			<bean class="de.hybris.platform.addonsupport.data.AddonExtensionMetadata">
				<property name="suffixChannel" value="false"/>
				<property name="baseExtensionName" value="questions"/>
			</bean>
		</property>
	</bean>

	<bean id="questionsSampleDataEventListener" parent="abstractGenericAddOnSampleDataEventListener"  >
		<property name="extensionName" value="questions" />
	</bean>

	<bean parent="modifyPopulatorList">
		<property name="list" ref="productConverter"/>
		<property name="add" ref="productQuestionDataPopulator"/>
	</bean>

	<bean id="productQuestionCountValueResolver"
		  class="by.kotik.questions.search.solrfacetsearch.provider.ProductQuestionCountValueResolver"
		  parent="abstractValueResolver">
	</bean>

	<alias name="productQuestionCountPopulator" alias="commerceSearchResultProductPopulator"/>
	<bean id="productQuestionCountPopulator"
		  class="by.kotik.questions.search.solrfacetsearch.populator.ProductQuestionCountPopulator"
		  parent="variantCommerceSearchResultProductPopulator">
	</bean>
	<bean id="generateQuestionsEmail" parent="abstractGenerateEmailAction">
		<property name="frontendTemplateName" value="QuestionsEmailTemplate"/>
	</bean>
	<bean id="questionsEmailingProcessDefinitionResource"
		  class="de.hybris.platform.processengine.definition.ProcessDefinitionResource">
		<property name="resource" value="classpath:/questions/process/questions-emailing-process.xml"/>
	</bean>
	<bean id="questionsEmailContext" class="by.kotik.questions.context.email.QuestionsEmailContext"
		  parent="abstractEmailContext" scope="prototype" >
		<property name="questionFacade" ref="defaultQuestionFacade"/>
	</bean>

	<bean parent="modifyPopulatorList">
		<property name="list" ref="productConverter"/>
		<property name="add" ref="productWarrantyPopulator"/>
	</bean>

	<bean id="productWarrantyYearsValueResolver"
		  class="by.kotik.questions.search.solrfacetsearch.provider.ProductWarrantyYearsValueResolver"
		  parent="abstractValueResolver">
	</bean>

	<alias name="productWarrantyYearsValuePopulator" alias="commerceSearchResultProductPopulator"/>
	<bean id="productWarrantyYearsValuePopulator"
		  class="by.kotik.questions.search.solrfacetsearch.populator.ProductWarrantyYearsValuePopulator"
		  parent="variantCommerceSearchResultProductPopulator">
	</bean>
</beans>
